    <!-- UserOrderDone Query -->
    <select id="userOrderDone" resultMap="orderResultMap">
        SELECT
            o.order_code,
            p.pay_date
        FROM
            `order` o
        JOIN pay p ON o.order_code = p.order_code
        WHERE c.id = #{id}
    </select>

    <!-- UserPayment Query-->
    <select id="userPayment" resultMap="CartResultMap">
        SELECT
            p.product_name,
            p.product_price,
            c.cartitem_count,
            u.name,
            u.phone,
            u.address1,
            u.address2,
            u.address3
        FROM
            cart c
        JOIN user u ON c.id = u.id
        JOIN `order` o ON u.id = o.id
        JOIN product p ON c.product_code = p.product_code
        WHERE c.id = #{id}
    </select>

    <!-- CartUpdateQuantity Query -->
    <update id="cartUpdateQuantity" parameterType="com.ohgiraffers.dosirak.user.order.model.dto.CartDTO">
        UPDATE
            cart
        SET
            cartitem_count = #{updatedQuantity}
        WHERE
            product_code = #{productCode}
    </update>
</mapper>