<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.dosirak.admin.review.model.dao.ReviewMapper">

    <select id="allReview" resultType="com.ohgiraffers.dosirak.admin.review.model.dto.ReviewDTO">
        SELECT
        *
        FROM
        tbl_review
        ORDER BY
        review_code
    </select>

    <select id="searchReviewDetail" resultType="com.ohgiraffers.dosirak.admin.review.model.dto.ReviewDTO">
        SELECT
        *
        FROM
            tbl_review
        WHERE
            review_code = #{reviewCode}
    </select>

</mapper>